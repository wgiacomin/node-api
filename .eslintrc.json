{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "quotes": ["error", "single"], 
        "curly": 2,
        "semi": ["error", "never"],
        "indent": ["error", 2],
        "no-multi-spaces": ["error"]
    }
}
