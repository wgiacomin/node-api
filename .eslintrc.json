{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "quotes": ["error", "single" , { "avoidEscape": true, "allowTemplateLiterals": true }], 
        "curly": 2,
        "semi": ["error", "never"],
        "indent": ["error", 2],
        "no-multi-spaces": ["error"],
        "no-unused-vars": ["warning", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }]
    }
}
